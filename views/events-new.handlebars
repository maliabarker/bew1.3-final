    <div class="col-sm-4 offset-sm-4">
        <form action="#" id="new-event">
            <legend>New Event</legend>

            <div class="mb-3 form-group">
                <label for="event-title" class="form-label">Title</label>
                <input type="text" name="title" class="form-control" id="event-title" placeholder="Title" required>
            </div>
            <div class="mb-3 form-group">
                <label for="event-description" class="form-label">Event Description</label>
                <input type="text" name="description" class="form-control" id="event-decsription" placeholder="Description" required>
